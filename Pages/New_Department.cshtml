@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model TC01_DavidBrenes_2022.Pages.New_DepartmentModel
@{
}

<br>
<h2>Nuevo Departamento</h2>

@if (Model.errorMessage.Length > 0)
{

	<div class=' alert alert-warning alert-dismissible fade show' role='alert'>

		<strong> @Model.errorMessage </strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'> </button>
	</div>
}

<form method="post" >
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Codigo</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="codigo" value="@Model.DepartmentInfo.codigo">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Nombre</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="nombre" value="@Model.DepartmentInfo.nombre">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">ID del Empleado que Dirige</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="id_empleado_dirige" value="@Model.DepartmentInfo.id_empleado_dirige">
		</div>
	</div>

	@if (Model.successMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class='alert alert-success alert-dismissible fade show' role='alert'>

					<strong> @Model.successMessage </strong>
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'> </button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<input class="btn btn-outline-primary" type="submit" value="Submit" asp-page-handler="Submit" />
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>
</form>


